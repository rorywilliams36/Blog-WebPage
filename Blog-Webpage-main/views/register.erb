<%= erb :"common/header" %>
        
        <main>
            <div class="login-page">

                <% if @submitted %>
                    <% if @submit_msg %>
                            <p><strong class="error"><%= @submit_msg %></strong></p>       
                    <% end %>
                <% end %>

                <h2>Let's Make an Account!</h2>
                <form>
                    <p><label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                    <% if @user_error %>
                        <br /><strong class="error"><%= @user_error %></strong>
                    <% end %>
                    </p>

                    <p><label for="title">Title:</label>
                    <input type="text" id="title" name="title" required></p>

                    <p><label for="firstname">First Name:</label>
                    <input type="text" id="firstname" name="firstname" required></p>

                    <p><label for="surname">Surname:</label>
                    <input type="text" id="surname" name="surname" required></p>
                    
                    <p>
                        <label for="password">Password:</label>
                        <input type="password" minlength="8" id="password" name="password" required>
                        <% if @password_error %>
                            <br /><br /><strong class="error"><%= @password_error %></strong>
                        <% end %>
                    </p>

                    <p>
                    <label for="confirm_password">Confirm Password:</label>
                    <% if @confirm_error %>
                        <br /><br /><strong class="error"><%= @confirm_error %></strong>
                    <% end %>
                    <input type="password" minlength="8" id="confirm_password" name="confirm_password" required></p>

                    <p>Passwords need to be a minimum of 8 characters and must contain a symbol, a number and an uppercase letter</p>

                    <br>
                    <p><b>Further Details</b></p>

                    <p>
                        <label for="email">Email:</label>
                        <input type="text" id="email" name="email" required>
                        <% if @email_error %>
                            <br /><strong class="error"><%= @email_error %></strong>
                        <% end %>
                    </p>

                    <p>
                        <label for="phonenumber">Phone Number:</label>
                        <input type="tel" id="phonenumber" name="phonenumber" required>
                        <% if @phone_error %>
                            <br /><strong class="error"><%= @phone_error %></strong>
                        <% end %>
                    </p>

                    <p>
                        <label for="dateofbirth">Date of Birth (DD-MM-YYYY):</label>
                        <input type="date" id="dateofbirth" name="dateofbirth">
                        <% if @age_error %>
                            <br /><strong class="error"><%= @age_error %></strong>
                        <% end %>
                    </p>

                    <p><label for="university">University:</label>
                    <input type="text" id="university" name="university"></p>

                    <input type="submit" id="register_button" value="Sign Up">
                    <br><br>
                </form>
            </div>
        </main>


    </div>

<%= erb :"common/footer" %>
