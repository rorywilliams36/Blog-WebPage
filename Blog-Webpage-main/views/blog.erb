<%= erb :"common/header" %>
        
        <main>
            <div id="blog-page">
            <h2>Make your own post:</h2>
                <form id="blog-page" action="/blog_input" method="post">
                    <p><label for="post_title">Title:</label></p>
                    <p><input type="text" id="post_title" name="post_title" required></p>

                    <p><label for="post_organization">Organization:</label></p>
                    <p><input type="text" id="post_organization" name="post_organization" required></p>
                    
                    <p><label for="post_content">Body:</label></p>
                    <p><textarea id="post_content" name="post_content" cols="200" rows="15" required></textarea></p>

                    <p><input type="submit" id="submit-button" value="Post"></p>
                    <br><br>
                </form>
            </div>
        </main>


    </div>

<%= erb :"common/footer" %>